<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">
        <activity android:name=".UserAnswerList"
            android:theme="@style/QuestionDetails" />
        <activity
            android:name=".UserQuestionList"
            android:theme="@style/QuestionDetails" />
        <activity android:name=".GeneralCategory" />
        <activity android:name=".QuestionsActivity" />
        <activity
            android:name=".SubmitCommentActivity"
            android:label="@string/comment_bar_title" />
        <activity
            android:name=".CommentsList"
            android:label="@string/comments" />
        <activity
            android:name=".SubmitAnswerActivity"
            android:label="@string/answer_bar_title" />
        <activity
            android:name=".QuestionDetailActivity"
            android:theme="@style/QuestionDetails" />
        <activity
            android:name=".SubmitQuestionActivity"
            android:label="@string/question_bar_title" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>