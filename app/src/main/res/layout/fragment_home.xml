<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical">


    <TextView
        android:id="@+id/lastViewedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/last_viewed_questions" />

    <ListView
        android:id="@+id/LastViewedQuestions"
        android:layout_width="match_parent"
        android:layout_height="252dp" />

    <TextView
        android:id="@+id/NewlyAddedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/newly_added_questions" />

    <ListView
        android:id="@+id/NewlyAddedQuestions"
        android:layout_width="match_parent"
        android:layout_height="251dp" />
</LinearLayout>